test <- function()
{
  Pis =matrix(rep(0, 11*11),nrow = 11, ncol = 11,byrow = TRUE)
  for (i in (0:10))
  {
    Pis[i+1,] <- machinerepair(10,25,8,2^i,100000)  
  }
  return(Pis)
}

